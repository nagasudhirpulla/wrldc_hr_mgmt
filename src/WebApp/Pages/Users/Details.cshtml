@page
@model WebApp.Pages.Users.DetailsModel
@{
    string pageTitle = "User Details";
    if (Model.RequestId == null)
    {
        pageTitle = "My Details";
    }
    ViewData["Title"] = pageTitle;
}

<div class="container">
    <h3>@pageTitle</h3>

    <table class="table table-bordered table-striped">
        <tr>
            <td>Name</td>
            <td>@Model.CUser.Username</td>
        </tr>
        <tr>
            <td>DisplayName</td>
            <td>@Model.CUser.DisplayName</td>
        </tr>
        <tr>
            <td>Employee Number</td>
            <td>@Model.CUser.OfficeId</td>
        </tr>
        <tr>
            <td>Designation</td>
            <td>@Model.CUser.Designation | <a asp-page="/EmployeeDesignationHistorys/Index" asp-route-usrId="@Model.CUser.UserId">View Designation History</a></td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Model.CUser.Email</td>
        </tr>
        <tr>
            <td>Phone</td>
            <td>@Model.CUser.PhoneNumber</td>
        </tr>
        <tr>
            <td>Department</td>
            <td>@Model.CUser.Department | <a asp-page="/EmployeeDeptHistorys/Index" asp-route-usrId="@Model.CUser.UserId">View Department History</a></td>
        </tr>
        <tr>
            <td>Role</td>
            <td>@Model.CUser.UserRole</td>
        </tr>
        <tr>
            <td>Date Of Birth</td>
            <td>@Model.CUser.Dob</td>
        </tr>
        <tr>
            <td>Grade</td>
            <td>@Model.CUser.Grade | <a asp-page="/EmployeeGradeHistorys/Index" asp-route-usrId="@Model.CUser.UserId">View Grade History</a></td>
        </tr>
        <tr>
            <td>Reporting Officer</td>
            <td>@Model.CUser.BossUser | <a asp-page="/EmployeeBossHistorys/Index" asp-route-usrId="@Model.CUser.UserId">View Reporting Officer History</a></td>
        </tr>
        <tr>
            <td>Father's Name</td>
            <td>@Model.CUser.FatherName</td>
        </tr>
        <tr>
            <td>Date Of Joining</td>
            <td>@Model.CUser.DateofJoining</td>
        </tr>
        <tr>
            <td>Date Of Gender</td>
            <td>@Model.CUser.Gender</td>
        </tr>
        <tr>
            <td>Ethnic Origin</td>
            <td>@Model.CUser.EthnicOrigin</td>
        </tr>
        <tr>
            <td>Domicile State</td>
            <td>@Model.CUser.DomicileState</td>
        </tr>
        <tr>
            <td>Religion</td>
            <td>@Model.CUser.Religion</td>
        </tr>
        <tr>
            <td>Specially Abled</td>
            <td>@Model.CUser.SpeciallyAbled</td>
        </tr>
        <tr>
            <td>Aadhar</td>
            <td>@Model.CUser.Aadhar</td>
        </tr>
        <tr>
            <td>PAN</td>
            <td>@Model.CUser.PAN</td>
        </tr>
        <tr>
            <td>UAN</td>
            <td>@Model.CUser.UAN</td>
        </tr>
        <tr>
            <td>PRAN</td>
            <td>@Model.CUser.PRAN</td>
        </tr>
        <tr>
            <td>Active?</td>
            <td>@(Model.CUser.IsActive?"Yes":"No")</td>
        </tr>
    </table>
    @if (Model.RequestId != null)
    {
        <div>
            <a asp-page="Index">Back to Users List</a>
        </div>
    }
</div>