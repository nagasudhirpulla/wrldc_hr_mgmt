@page
@model WebApp.Pages.EmployeeDesignationHistorys.IndexModel

@{
    ViewData["Title"] = "Index";
}


<h1>Designations History</h1>

<p>
    <a asp-page="Create" asp-route-usrId="@Model.EmployeeId">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignationHistory[0].ApplicationUser.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignationHistory[0].Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignationHistory[0].FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignationHistory[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignationHistory[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignationHistory[0].LastModifiedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignationHistory[0].LastModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EmpDesignationHistory)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModifiedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

