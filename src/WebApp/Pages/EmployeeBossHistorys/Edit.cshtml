@page
@model WebApp.Pages.EmployeeBossHistorys.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee Reporting Officer History</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Reporting Officer</label>
                <select asp-for="EmpBossHistItem.BossUserId" class="form-control" asp-items="Model.ReportingOfficerNameSL"></select>
                <span asp-validation-for="EmpBossHistItem.BossUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Start Date</label>
                <input asp-for="EmpBossHistItem.FromDate" class="form-control" type="date" />
                <span asp-validation-for="EmpBossHistItem.FromDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">End Date</label>
                <input asp-for="EmpBossHistItem.ToDate" class="form-control" type="date" />
                <span asp-validation-for="EmpBossHistItem.ToDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="EmpBossHistItem.Id" />
            <input type="hidden" asp-for="EmpBossHistItem.ApplicationUserId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-usrId="@Model.EmpBossHistItem.ApplicationUserId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
