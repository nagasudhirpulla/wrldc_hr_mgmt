@page
@model WebApp.Pages.EmployeeGradeHistorys.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NewGradeHistory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="NewGradeHistory.ApplicationUserId" type="hidden" />
            <div class="form-group">
                <label class="control-label">Grade</label>
                <select asp-for="NewGradeHistory.GradeId" class="form-control" asp-items="Model.GradeNameSL"></select>
                <span asp-validation-for="NewGradeHistory.GradeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewGradeHistory.FromDate" class="control-label"></label>
                <input asp-for="NewGradeHistory.FromDate" class="form-control" type="date" />
                <span asp-validation-for="NewGradeHistory.FromDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-usrId="@Model.NewGradeHistory.ApplicationUserId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
